# ==============================================================================
# FARIS Environment Configuration
# ==============================================================================
# Copy this file to .env and update the values as needed

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
APP_NAME=FARIS
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# API Server Settings
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# ------------------------------------------------------------------------------
# CORS Settings
# ------------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-frontend.vercel.app"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ------------------------------------------------------------------------------
# Database Settings
# ------------------------------------------------------------------------------
# SQLite (Development)
DATABASE_URL=sqlite+aiosqlite:///./faris.db

# PostgreSQL (Production) - Uncomment when ready
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/faris

# ------------------------------------------------------------------------------
# Vector Database Settings (ChromaDB)
# ------------------------------------------------------------------------------
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=faris_failures

# ------------------------------------------------------------------------------
# LLM Settings (Ollama)
# ------------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120
OLLAMA_NUM_CTX=4096

# Alternative models (uncomment to use)
# OLLAMA_MODEL=mistral:7b
# OLLAMA_MODEL=phi3:medium
# OLLAMA_MODEL=gemma2:9b

# ------------------------------------------------------------------------------
# Embeddings Settings
# ------------------------------------------------------------------------------
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# ------------------------------------------------------------------------------
# Analysis Settings
# ------------------------------------------------------------------------------
# Failure detection confidence threshold (0.0 - 1.0)
FAILURE_CONFIDENCE_THRESHOLD=0.5

# Risk scoring weights (must sum to 1.0)
WEIGHT_HALLUCINATION=0.35
WEIGHT_LOGICAL_INCONSISTENCY=0.25
WEIGHT_MISSING_ASSUMPTIONS=0.20
WEIGHT_OVERCONFIDENCE=0.10
WEIGHT_SCOPE_VIOLATION=0.05
WEIGHT_UNDERSPECIFICATION=0.05

# Domain risk multipliers
DOMAIN_MULTIPLIER_GENERAL=1.0
DOMAIN_MULTIPLIER_FINANCE=1.5
DOMAIN_MULTIPLIER_MEDICAL=2.0
DOMAIN_MULTIPLIER_LEGAL=1.8
DOMAIN_MULTIPLIER_CODE=1.3

# ------------------------------------------------------------------------------
# Rate Limiting (Optional)
# ------------------------------------------------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ------------------------------------------------------------------------------
# Cache Settings (Optional)
# ------------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL=3600
